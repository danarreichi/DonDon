<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tanggal_transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:text="2021-09-29"
                android:textSize="8pt" />


            <TextView
                android:id="@+id/keterangan_transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Beli-in Ryujin Makan"
                android:textSize="9pt" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kategori_transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:text="(Hedon)"
                android:textAlignment="textEnd"
                android:textSize="7pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nominal_transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="(+) Rp4.000.000"
                android:textAlignment="textEnd"
                android:textSize="8pt"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>